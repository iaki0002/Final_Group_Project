<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#b3ecff" />
            <gradient android:angle="-90" android:startColor="#ffffb3" android:endColor="#ffff33"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#b3ecff" />
            <solid android:color="#e6e600"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#b3ecff" />
            <gradient android:angle="-90" android:startColor="#ffffff" android:endColor="#ffff33" />
        </shape>
    </item>
</selector>